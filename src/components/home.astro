---
// Importar secciones
import HeroSection from "./sections/HeroSection.astro";
import LogosSection from "./sections/LogosSection.astro";
import ServicesSection from "./sections/ServicesSection.astro";
import BookingGatewaySection from "./sections/BookingGatewaySection.astro";
import TestimonialsSection from "./sections/TestimonialsSection.astro";

// Importar componentes UI
import Separator from "./ui/Separator.astro";
import SakuraDivider from "./ui/SakuraDivider.astro";
---

<!-- Hero Section - Full Width -->
<HeroSection />

<!-- Content Section con fondo -->
<div class="bg-[var(--background)] py-12 md:py-16 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-[var(--background)] rounded-[32px] p-6 md:p-10 lg:p-12">
      <!-- Separador inicial -->
      <Separator spacing="md" />

      <!-- Logos Section -->
      <LogosSection />

      <!-- Separador -->
      <Separator spacing="md" />

      <!-- Services Section -->
      <ServicesSection />

      <!-- Separador decorativo con sakura -->
      <SakuraDivider />

      <!-- Booking Gateway Section -->
      <BookingGatewaySection />

      <!-- Separador -->
      <Separator spacing="md" />

      <!-- Testimonials Section -->
      <TestimonialsSection />
    </div>
  </div>
</div>
