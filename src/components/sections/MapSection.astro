---
import "../../styles/sections/MapSection.css";

// Sección de mapa de Google integrado
---

<section class="map-section" id="ubicacion">
  <div class="map-container">
    <div class="map-header">
      <p class="eyebrow">Ubicación</p>
      <h2 class="section-title">Encuéntranos en Alcalá de Henares</h2>
      <p class="section-subtitle">
        Estamos en el corazón de Alcalá, cerca de ti para cuidarte cada día
      </p>
    </div>

    <div class="map-wrapper">
      <div class="map-info">
        <div class="info-card">
          <div class="info-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                stroke-linecap="round"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
          </div>
          <div class="info-content">
            <h3 class="info-title">Dirección</h3>
            <p class="info-text">
              Calle Lic. Madrid, 10<br />28802 Alcalá de Henares, Madrid
            </p>
          </div>
        </div>

        <div class="info-card">
          <div class="info-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
          <div class="info-content">
            <h3 class="info-title">Horario</h3>
            <p class="info-text">
              Lun-Vie: 10:00-14:00 y 17:00-19:30<br />Sáb-Dom: Cerrado
            </p>
          </div>
        </div>

        <div class="info-card">
          <div class="info-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path>
            </svg>
          </div>
          <div class="info-content">
            <h3 class="info-title">Teléfono</h3>
            <p class="info-text">
              <a href="tel:+34662275255" class="phone-link">662 275 255</a>
            </p>
          </div>
        </div>

        <a
          href="https://www.google.com/maps/search/?api=1&query=Calle+Lic.+Madrid+10+Alcal%C3%A1+de+Henares+Madrid"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-directions"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
              stroke-linecap="round"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          <span>Cómo llegar</span>
        </a>
      </div>

      <div class="map-embed">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3034.8!2d-3.3666!3d40.4819!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd424909070d3139%3A0x610c0ef5bc47f78c!2sCalle%20Licenciado%20Madrid%2C%2010%2C%2028802%20Alcal%C3%A1%20de%20Henares%2C%20Madrid!5e0!3m2!1ses!2ses!4v1704318000000!5m2!1ses!2ses"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Ubicación de Paula Nails en Calle Lic. Madrid, 10, Alcalá de Henares"
        ></iframe>
      </div>
    </div>
  </div>
</section>
