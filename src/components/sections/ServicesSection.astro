---
import SkillsList from "../react/SkillsList.tsx";
import "../../styles/sections/ServicesSection.css";
---

<section class="services-section">
  <div class="services-header">
    <p class="services-eyebrow">Experiencias premium</p>
    <h3 class="services-title">Servicios de Belleza en Alcalá de Henares</h3>
    <p class="services-subtitle">
      Tratamientos personalizados para realzar tu belleza natural
    </p>
  </div>
  <div class="services-wrapper">
    <SkillsList client:load />
  </div>

  <!-- CTA Card - Reserva Online -->
  <div class="services-cta-wrapper">
    <a href="#booking" class="services-cta-card">
      <div class="services-cta-icon">
        <svg
          width="32"
          height="32"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <rect width="18" height="18" x="3" y="4" rx="2" ry="2"></rect>
          <line x1="16" x2="16" y1="2" y2="6"></line>
          <line x1="8" x2="8" y1="2" y2="6"></line>
          <line x1="3" x2="21" y1="10" y2="10"></line>
          <path d="M8 14h.01"></path>
          <path d="M12 14h.01"></path>
          <path d="M16 14h.01"></path>
          <path d="M8 18h.01"></path>
          <path d="M12 18h.01"></path>
        </svg>
      </div>
      <div class="services-cta-content">
        <h4 class="services-cta-title">Reserva tu cita online</h4>
        <p class="services-cta-description">
          Accede a tu área personal y gestiona tus reservas de forma fácil y
          segura
        </p>
      </div>
      <div class="services-cta-arrow">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      </div>
    </a>
  </div>
</section>
