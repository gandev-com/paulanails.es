---
import Testimonials from "../testimonials.astro";
import "../../styles/sections/TestimonialsSection.css";
---

<section class="testimonials-section-wrapper">
  <div class="testimonials-header">
    <p class="testimonials-eyebrow">Voces reales</p>
    <h3 class="testimonials-title">
      Opiniones de Clientas en Alcalá de Henares
    </h3>
  </div>
  <Testimonials />

  <!-- Micro-CTA opcional -->
  <div class="testimonials-cta">
    <p class="testimonials-cta-text">
      ¿Lista para tu próxima experiencia de belleza?
    </p>
    <a href="#booking" class="testimonials-cta-link">
      Acceder a mi cuenta
      <svg
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <path d="M5 12h14"></path>
        <path d="m12 5 7 7-7 7"></path>
      </svg>
    </a>
  </div>
</section>
