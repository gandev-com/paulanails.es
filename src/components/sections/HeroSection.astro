<script>
  // Slider automático
  let currentSlide = 0;
  const slides = document.querySelectorAll(".slider-image");
  const totalSlides = slides.length;

  function changeSlide() {
    slides[currentSlide]?.classList.remove("active");
    currentSlide = (currentSlide + 1) % totalSlides;
    slides[currentSlide]?.classList.add("active");
  }

  const isReducedMotion = window.matchMedia(
    "(prefers-reduced-motion: reduce)",
  ).matches;
  if (!isReducedMotion && slides.length > 0) {
    setInterval(changeSlide, 5000);
  }

  // Texto rotativo
  const rotatingTexts = [
    "Belleza y Bienestar en Alcalá",
    "Manicura y Pedicura Premium",
    "Depilación Láser Certificada",
    "Masajes y Terapias Holísticas",
  ];

  let textIndex = 0;
  const textElement = document.querySelector(
    ".rotating-text",
  ) as HTMLElement | null;

  function rotateText() {
    if (textElement) {
      textElement.style.opacity = "0";
      setTimeout(() => {
        textElement.textContent = rotatingTexts[textIndex];
        textElement.style.opacity = "1";
        textIndex = (textIndex + 1) % rotatingTexts.length;
      }, 300);
    }
  }

  if (textElement && !isReducedMotion) {
    rotateText();
    setInterval(rotateText, 3500);
  } else if (textElement) {
    textElement.textContent = rotatingTexts[0];
  }

  // Parallax sutil mejorado
  let ticking = false;
  function handleParallax() {
    if (isReducedMotion || ticking) return;
    ticking = true;
    requestAnimationFrame(() => {
      const heroBackground = document.querySelector(
        ".hero-background",
      ) as HTMLElement;
      const scrolled = window.pageYOffset;
      const heroHeight = window.innerHeight;

      // Solo aplicar parallax en el rango visible del hero
      if (heroBackground && scrolled < heroHeight) {
        // Factor reducido (0.3 en vez de 0.5) y limitado al 30% de la altura
        const translateY = Math.min(scrolled * 0.3, heroHeight * 0.3);
        heroBackground.style.transform = `translateY($${translateY}px)`;
      }
      ticking = false;
    });
  }

  if (!isReducedMotion) {
    window.addEventListener("scroll", handleParallax, { passive: true });
  }
</script>

<style>
  .new-hero {
    position: relative;
    height: 100vh;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .hero-wrapper {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .slider-container {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .slider-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 0;
    transition: opacity 1.5s ease-in-out;
  }

  .slider-image.active {
    opacity: 1;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.5) 0%,
      rgba(232, 118, 154, 0.15) 100%
    );
    z-index: 1;
  }

  .sakura-overlay {
    position: absolute;
    inset: 0;
    z-index: 2;
    pointer-events: none;
    color: var(--pink-light);
  }

  .sakura-petal {
    position: absolute;
    animation: sakuraDrift 14s ease-in-out infinite;
  }

  .sakura-petal-1 {
    top: 15%;
    right: 10%;
    animation-duration: 16s;
    animation-delay: -2s;
  }

  .sakura-petal-2 {
    top: 60%;
    left: 8%;
    animation-duration: 18s;
    animation-delay: -5s;
  }

  @keyframes sakuraDrift {
    0%,
    100% {
      transform: translate(0, 0) rotate(0deg);
    }
    25% {
      transform: translate(15px, 20px) rotate(5deg);
    }
    50% {
      transform: translate(5px, 35px) rotate(-3deg);
    }
    75% {
      transform: translate(-10px, 20px) rotate(4deg);
    }
  }

  .hero-content {
    position: relative;
    z-index: 3;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
  }

  .hero-content-inner {
    max-width: 1280px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-title {
    font-family: "Edwardian Script ITC", cursive;
    font-size: clamp(3.5rem, 5vw, 5.5rem);
    font-weight: 400;
    line-height: 1.1;
    color: white;
    margin-bottom: 1rem;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  .hero-title-script {
    font-family: "Edwardian Script ITC", cursive;

    font-weight: 400;
    display: block;
    color: var(--pink-light);
  }

  .hero-subtitle {
    font-family: "Montserrat", sans-serif;
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    font-weight: 600;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 1.5rem;
    min-height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .rotating-text {
    transition: opacity 0.3s ease;
  }

  .hero-description {
    font-family: "Lato", sans-serif;
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
    max-width: 720px;
    margin: 0 auto 2.5rem;
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.2);
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
    justify-content: center;
  }

  .hero-social {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
    transition: all 0.3s ease;
  }

  .social-btn:hover {
    background: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
  }

  .cta-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.125rem 2.5rem;
    background: linear-gradient(135deg, var(--pink-dark), var(--pink-darker));
    color: white;
    font-family: "Montserrat", sans-serif;
    font-weight: 700;
    font-size: 1.0625rem;
    border-radius: 28px;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 8px 24px rgba(232, 118, 154, 0.4);
  }

  .cta-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 32px rgba(232, 118, 154, 0.5);
  }

  @media (prefers-reduced-motion: reduce) {
    .slider-image,
    .sakura-petal,
    .social-btn:hover,
    .cta-primary:hover {
      animation: none;
      transform: none;
      transition: none;
    }
  }

  @media (min-width: 768px) {
    .hero-actions {
      flex-direction: row;
      gap: 2rem;
    }
  }
</style>
