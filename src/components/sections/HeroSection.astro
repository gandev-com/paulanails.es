<script>
  // Configuración y estado
  let isReducedMotion = window.matchMedia(
    "(prefers-reduced-motion: reduce)"
  ).matches;
  let ticking = false;
  let lastScrollY = 0;

  // Throttled parallax con RAF
  function handleParallax() {
    if (isReducedMotion || ticking) return;

    ticking = true;
    requestAnimationFrame(() => {
      const heroBackground = document.querySelector(
        ".hero-background"
      ) as HTMLElement;
      if (heroBackground && window.pageYOffset < window.innerHeight) {
        const scrolled = window.pageYOffset;
        const rate = scrolled * 0.4; // Suavizado
        heroBackground.style.transform = `translate3d(0, ${rate}px, 0)`;
      }
      ticking = false;
    });
  }

  // Slider optimizado con crossfade
  const sliderImages =
    document.querySelectorAll<HTMLImageElement>(".slider-image");
  if (sliderImages.length > 1 && !isReducedMotion) {
    let currentSlide = 0;

    function nextSlide() {
      const current = sliderImages[currentSlide];
      currentSlide = (currentSlide + 1) % sliderImages.length;
      const next = sliderImages[currentSlide];

      current.classList.remove("active");
      next.classList.add("active");
    }

    // Cambiar cada 5 segundos
    setInterval(nextSlide, 5000);
  }

  // Texto rotativo con typewriter mejorado
  const rotatingText = document.querySelector(".rotating-text");
  if (rotatingText && !isReducedMotion) {
    const words = ["BELLEZA", "CUIDADO", "ARTE", "ESTILO", "ELEGANCIA"];
    let currentIndex = 0;
    let isTyping = false;

    function typeWord(word: string) {
      if (isTyping) return;
      isTyping = true;
      let charIndex = 0;
      rotatingText.textContent = "";

      const typingInterval = setInterval(() => {
        if (charIndex < word.length) {
          rotatingText.textContent += word[charIndex];
          charIndex++;
        } else {
          clearInterval(typingInterval);
          isTyping = false;
        }
      }, 100);
    }

    function eraseWord() {
      const currentText = rotatingText.textContent || "";
      let charIndex = currentText.length;

      const erasingInterval = setInterval(() => {
        if (charIndex > 0) {
          rotatingText.textContent = currentText.substring(0, charIndex - 1);
          charIndex--;
        } else {
          clearInterval(erasingInterval);
          currentIndex = (currentIndex + 1) % words.length;
          setTimeout(() => typeWord(words[currentIndex]), 300);
        }
      }, 70);
    }

    typeWord(words[0]);
    setInterval(() => eraseWord(), 3200);
  } else if (rotatingText) {
    // Fallback sin animación
    rotatingText.textContent = "BELLEZA";
  }

  // Event listeners con cleanup
  if (!isReducedMotion) {
    window.addEventListener("scroll", handleParallax, { passive: true });
  }

  // Listener para cambios en reduced motion
  const motionQuery = window.matchMedia("(prefers-reduced-motion: reduce)");
  motionQuery.addEventListener("change", (e) => {
    isReducedMotion = e.matches;
    if (isReducedMotion) {
      const heroBackground = document.querySelector(
        ".hero-background"
      ) as HTMLElement;
      if (heroBackground) {
        heroBackground.style.transform = "none";
      }
    }
  });
</script>
