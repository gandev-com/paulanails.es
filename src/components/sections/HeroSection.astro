              class="hover:text-white transition duration-300 ease-in-out border border-1 p-2 md:p-3 rounded-xl"
              onmouseover="this.style.backgroundColor='var(--pink)'"
              onmouseout="this.style.backgroundColor='var(--pink-light)'"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
