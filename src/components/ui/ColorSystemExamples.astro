---
/**
 * Ejemplos de Componentes usando el Sistema de Colores Global
 * Este archivo sirve como referencia para nuevos componentes
 */
---

<!-- ========== BOTONES ========== --><!-- Botón Principal (Primary Button) -->
<button
  type="button"
  class="px-6 py-3 rounded-full font-semibold text-base transition-all hover:scale-105"
  style="
    color: var(--text-on-pink);
    background-color: var(--pink);
    box-shadow: var(--shadow-md);
  "
  onmouseover="
    this.style.backgroundColor='var(--pink-dark)';
    this.style.boxShadow='var(--shadow-lg)';
  "
  onmouseout="
    this.style.backgroundColor='var(--pink)';
    this.style.boxShadow='var(--shadow-md)';
  "
>
  Botón Principal
</button>

<!-- Botón Secundario (Secondary Button) -->
<button
  type="button"
  class="px-6 py-3 rounded-full font-semibold text-base transition-all"
  style="
    color: var(--text-primary);
    background-color: var(--pink-light);
    box-shadow: var(--shadow-sm);
  "
  onmouseover="
    this.style.backgroundColor='var(--pink)';
    this.style.color='var(--text-on-pink)';
    this.style.boxShadow='var(--shadow-md)';
  "
  onmouseout="
    this.style.backgroundColor='var(--pink-light)';
    this.style.color='var(--text-primary)';
    this.style.boxShadow='var(--shadow-sm)';
  "
>
  Botón Secundario
</button>

<!-- Botón con Icono -->
<button
  type="button"
  class="flex items-center gap-2 px-6 py-3 rounded-xl font-medium transition-all"
  style="
    color: var(--icon-color);
    background-color: var(--pink-light);
    border: 1px solid var(--border-light);
  "
  onmouseover="
    this.style.backgroundColor='var(--pink)';
    this.style.color='var(--text-on-pink)';
  "
  onmouseout="
    this.style.backgroundColor='var(--pink-light)';
    this.style.color='var(--icon-color)';
  "
>
  <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
  </svg>
  Botón con Icono
</button>

<!-- ========== CARDS ========== -->

<!-- Card Básica -->
<div
  class="rounded-3xl p-6 transition-all hover:scale-[1.02]"
  style="
    background-color: var(--background);
    box-shadow: var(--shadow-md);
  "
>
  <h3 class="text-xl font-semibold mb-2" style="color: var(--text-primary);">
    Título de Card
  </h3>
  <p class="text-sm" style="color: var(--text-muted);">
    Descripción de la card con texto secundario.
  </p>
</div>

<!-- Card con Gradiente -->
<div
  class="rounded-3xl overflow-hidden transition-all hover:scale-[1.02]"
  style="box-shadow: var(--shadow-md);"
>
  <div class="p-6" style="background: var(--gradient-pink);">
    <h3 class="text-xl font-semibold mb-2" style="color: var(--text-on-pink);">
      Card con Gradiente
    </h3>
    <p class="text-sm" style="color: var(--text-on-pink); opacity: 0.9;">
      Contenido sobre fondo gradiente.
    </p>
  </div>
</div>

<!-- Card Interactiva -->
<a
  href="#"
  class="block rounded-3xl p-6 transition-all"
  style="
    background-color: var(--pink-light);
    box-shadow: var(--shadow-sm);
  "
  onmouseover="
    this.style.backgroundColor='var(--pink)';
    this.style.boxShadow='var(--shadow-lg)';
  "
  onmouseout="
    this.style.backgroundColor='var(--pink-light)';
    this.style.boxShadow='var(--shadow-sm)';
  "
>
  <h4 class="text-lg font-semibold mb-2" style="color: var(--text-primary);">
    Card Interactiva
  </h4>
  <p class="text-sm" style="color: var(--text-secondary);">
    Haz hover para ver el efecto
  </p>
</a>

<!-- ========== ICONOS Y ENLACES ========== -->

<!-- Icono Social -->
<a
  href="#"
  class="inline-flex items-center justify-center w-12 h-12 rounded-xl transition-all"
  style="
    color: var(--icon-color);
    background-color: var(--pink-light);
    border: 1px solid var(--border-light);
  "
  onmouseover="
    this.style.backgroundColor='var(--pink)';
    this.style.color='var(--text-on-pink)';
  "
  onmouseout="
    this.style.backgroundColor='var(--pink-light)';
    this.style.color='var(--icon-color)';
  "
  aria-label="Red Social"
>
  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
    <path
      d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
    ></path>
  </svg>
</a>

<!-- Link con Hover -->
<a
  href="#"
  class="inline-flex items-center gap-2 text-sm font-medium transition-colors"
  style="color: var(--text-muted);"
  onmouseover="this.style.color='var(--primary)'"
  onmouseout="this.style.color='var(--text-muted)'"
>
  Ver más
  <svg
    width="16"
    height="16"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
  >
    <path d="M5 12h14M12 5l7 7-7 7"></path>
  </svg>
</a>

<!-- ========== SEPARADORES ========== -->

<!-- Separador Horizontal -->
<div class="flex justify-center my-8">
  <div
    class="w-1/2 h-[1px]"
    style="background: linear-gradient(to right, transparent, var(--separator), transparent);"
  >
  </div>
</div>

<!-- Separador Full Width -->
<hr
  style="border: none; border-top: 1px solid var(--border-light); margin: 2rem 0;"
/>

<!-- ========== TEXTO ========== -->

<!-- Jerarquía de Títulos -->
<div class="space-y-4">
  <h1 class="text-4xl font-bold" style="color: var(--text-primary);">
    Título Principal (H1)
  </h1>
  <h2 class="text-3xl font-semibold" style="color: var(--text-primary);">
    Título Secundario (H2)
  </h2>
  <h3 class="text-2xl font-semibold" style="color: var(--text-secondary);">
    Subtítulo (H3)
  </h3>
  <p class="text-base" style="color: var(--text-muted);">
    Texto de párrafo normal con color muted.
  </p>
</div>

<!-- Badge / Tag -->
<span
  class="inline-block px-3 py-1 rounded-full text-xs font-medium"
  style="
    color: var(--text-on-pink);
    background-color: var(--pink);
  "
>
  Nuevo
</span>

<!-- ========== INPUTS ========== -->

<!-- Input de Texto -->
<input
  type="text"
  placeholder="Escribe algo..."
  class="w-full px-4 py-3 rounded-xl transition-all focus:outline-none"
  style="
    color: var(--text-primary);
    background-color: var(--background);
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-sm);
  "
  onfocus="
    this.style.borderColor='var(--pink)';
    this.style.boxShadow='var(--shadow-md)';
  "
  onblur="
    this.style.borderColor='var(--border-color)';
    this.style.boxShadow='var(--shadow-sm)';
  "
/>

<!-- Textarea -->
<textarea
  placeholder="Tu mensaje..."
  rows="4"
  class="w-full px-4 py-3 rounded-xl transition-all focus:outline-none resize-none"
  style="
    color: var(--text-primary);
    background-color: var(--background);
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-sm);
  "
  onfocus="
    this.style.borderColor='var(--pink)';
    this.style.boxShadow='var(--shadow-md)';
  "
  onblur="
    this.style.borderColor='var(--border-color)';
    this.style.boxShadow='var(--shadow-sm)';
  "
></textarea>

<!-- ========== ALERTS / NOTIFICACIONES ========== -->

<!-- Alert Success -->
<div
  class="rounded-xl p-4 flex items-start gap-3"
  style="
    background-color: var(--pink-light);
    border: 1px solid var(--pink);
  "
>
  <svg
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
  >
    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
    <polyline points="22 4 12 14.01 9 11.01"></polyline>
  </svg>
  <div>
    <p class="font-medium text-sm" style="color: var(--text-primary);">
      ¡Éxito!
    </p>
    <p class="text-xs mt-1" style="color: var(--text-secondary);">
      Tu acción se completó correctamente.
    </p>
  </div>
</div>

<!-- ========== LOADING / SKELETON ========== -->

<!-- Skeleton Card -->
<div
  class="rounded-3xl p-6 animate-pulse"
  style="background-color: var(--background-secondary);"
>
  <div
    class="h-4 rounded mb-3"
    style="background-color: var(--background-dark); width: 60%;"
  >
  </div>
  <div
    class="h-3 rounded mb-2"
    style="background-color: var(--background-dark); width: 80%;"
  >
  </div>
  <div
    class="h-3 rounded"
    style="background-color: var(--background-dark); width: 40%;"
  >
  </div>
</div>

<style>
  /* Asegúrate de que estos estilos estén en tu archivo global */
  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>
