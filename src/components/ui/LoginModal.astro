---
// Modal de login/reserva
---

<div
  class="login-modal"
  id="loginModal"
  role="dialog"
  aria-labelledby="modal-title"
  aria-modal="true"
  hidden
>
  <div class="modal-overlay" data-close-modal></div>

  <div class="modal-content">
    <button class="modal-close" data-close-modal aria-label="Cerrar modal">
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <path d="M18 6L6 18M6 6l12 12" stroke-linecap="round"></path>
      </svg>
    </button>

    <div class="modal-header">
      <h2 class="modal-title" id="modal-title">
        Reserva tu <span class="elegant">experiencia</span>
      </h2>
      <p class="modal-subtitle">
        Inicia sesión o regístrate para agendar tu cita
      </p>
    </div>

    <div class="modal-body">
      <!-- Vista LOGIN -->
      <form class="login-form" id="loginForm">
        <div class="form-group">
          <label for="login-email" class="form-label">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            Email
          </label>
          <input
            type="email"
            id="login-email"
            name="email"
            class="form-input"
            placeholder="tu@email.com"
            required
            autocomplete="email"
          />
          <span class="form-error" role="alert"></span>
        </div>

        <div class="form-group">
          <label for="login-password" class="form-label">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            Contraseña
          </label>
          <input
            type="password"
            id="login-password"
            name="password"
            class="form-input"
            placeholder="••••••••"
            required
            autocomplete="current-password"
          />
          <span class="form-error" role="alert"></span>
        </div>

        <button type="button" class="link-forgot" data-show-forgot
          >¿Olvidaste tu contraseña?</button
        >

        <button type="submit" class="btn-submit">
          <span>Iniciar sesión</span>
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path d="M5 12h14M12 5l7 7-7 7" stroke-linecap="round"></path>
          </svg>
        </button>

        <p class="form-footer">
          ¿No tienes cuenta? <button
            type="button"
            class="link-register"
            data-show-register>Regístrate aquí</button
          >
        </p>
      </form>

      <!-- Vista FORGOT PASSWORD -->
      <form class="forgot-form" id="forgotForm" hidden>
        <div class="form-group">
          <label for="forgot-email" class="form-label">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            Email
          </label>
          <input
            type="email"
            id="forgot-email"
            name="email"
            class="form-input"
            placeholder="tu@email.com"
            required
            autocomplete="email"
          />
          <span class="form-error" role="alert"></span>
        </div>

        <p class="forgot-hint">
          Te enviaremos un enlace para recuperar tu contraseña
        </p>

        <button type="submit" class="btn-submit">
          <span>Enviar enlace</span>
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"
              stroke-linecap="round"></path>
          </svg>
        </button>

        <button type="button" class="link-back" data-show-login
          >Volver al inicio de sesión</button
        >
      </form>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("loginModal");
    const loginForm = document.getElementById("loginForm") as HTMLFormElement;
    const forgotForm = document.getElementById("forgotForm") as HTMLFormElement;

    if (!modal) return;

    // Funciones helper
    function openModal() {
      modal.hidden = false;
      document.body.style.overflow = "hidden";
      showLoginView();
    }

    function closeModal() {
      modal.hidden = true;
      document.body.style.overflow = "";
    }

    function showLoginView() {
      if (loginForm && forgotForm) {
        loginForm.hidden = false;
        forgotForm.hidden = true;
      }
    }

    function showForgotView() {
      if (loginForm && forgotForm) {
        loginForm.hidden = true;
        forgotForm.hidden = false;
      }
    }

    // Abrir modal
    document.querySelectorAll("[data-open-login]").forEach((btn) => {
      btn.addEventListener("click", (e) => {
        e.preventDefault();
        openModal();
      });
    });

    // Cerrar modal - Click en botones y overlay
    document.querySelectorAll("[data-close-modal]").forEach((btn) => {
      btn.addEventListener("click", (e) => {
        e.preventDefault();
        e.stopPropagation();
        closeModal();
      });
    });

    // Cerrar también si se hace clic directamente en el modal container (backdrop)
    modal.addEventListener("click", (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    // Escape key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && !modal.hidden) {
        closeModal();
      }
    });

    // Cambiar entre vistas
    document.querySelectorAll("[data-show-login]").forEach((btn) => {
      btn.addEventListener("click", showLoginView);
    });

    document.querySelectorAll("[data-show-forgot]").forEach((btn) => {
      btn.addEventListener("click", showForgotView);
    });

    // Validación y submit LOGIN

    // Validación y submit LOGIN
    loginForm?.addEventListener("submit", (e) => {
      e.preventDefault();

      const emailInput = loginForm.querySelector(
        "#login-email"
      ) as HTMLInputElement;
      const passwordInput = loginForm.querySelector(
        "#login-password"
      ) as HTMLInputElement;

      const email = emailInput?.value.trim();
      const password = passwordInput?.value;

      // Validación simple
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        showError(emailInput, "Email inválido");
        return;
      }

      if (password.length < 8) {
        showError(
          passwordInput,
          "La contraseña debe tener al menos 8 caracteres"
        );
        return;
      }

      // Redirección (personaliza esta URL)
      const loginUrl = `https://tu-app-reservas.com/login?email=${encodeURIComponent(email)}`;
      window.location.href = loginUrl;
    });

    // Validación y submit FORGOT
    forgotForm?.addEventListener("submit", (e) => {
      e.preventDefault();

      const emailInput = forgotForm.querySelector(
        "#forgot-email"
      ) as HTMLInputElement;
      const email = emailInput?.value.trim();

      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        showError(emailInput, "Email inválido");
        return;
      }

      // Redirección (personaliza esta URL)
      const forgotUrl = `https://tu-app-reservas.com/forgot?email=${encodeURIComponent(email)}`;
      window.location.href = forgotUrl;
    });

    function showError(input: HTMLInputElement, message: string) {
      const errorSpan = input.parentElement?.querySelector(".form-error");
      if (errorSpan) {
        errorSpan.textContent = message;
        input.classList.add("error");

        // Limpiar error al escribir
        input.addEventListener(
          "input",
          () => {
            errorSpan.textContent = "";
            input.classList.remove("error");
          },
          { once: true }
        );
      }
    }
  }); // Cierre del DOMContentLoaded
</script>

<style>
  .login-modal {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .login-modal[hidden] {
    display: none;
  }

  .modal-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    animation: fadeIn 0.3s ease;
    cursor: pointer;
    z-index: 1;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .modal-content {
    position: relative;
    background: white;
    border-radius: 32px;
    padding: 2.5rem;
    width: 100%;
    max-width: 480px;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    animation: slideUp 0.3s ease;
    z-index: 2;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .modal-close {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    background: var(--component-bg);
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-primary);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .modal-close:hover {
    background: var(--pink-light);
    color: var(--pink-darker);
  }

  .modal-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .modal-title {
    font-family: "Lato", sans-serif;
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
  }

  .elegant {
    font-family: "Edwardian Script ITC", cursive;
    font-size: 1.25em;
    color: var(--pink-darker);
    font-weight: 400;
  }

  .modal-subtitle {
    font-family: "Lato", sans-serif;
    font-size: 0.9375rem;
    color: var(--text-secondary);
  }

  .modal-body {
    width: 100%;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: "Montserrat", sans-serif;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .form-label svg {
    color: var(--pink-darker);
  }

  .form-input {
    width: 100%;
    padding: 0.875rem 1.25rem;
    font-family: "Lato", sans-serif;
    font-size: 1rem;
    border: 2px solid var(--pink-light);
    border-radius: 16px;
    background: white;
    color: var(--text-primary);
    transition: all 0.2s ease;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--pink-dark);
    box-shadow: 0 0 0 3px rgba(255, 145, 184, 0.2);
  }

  .form-input.error {
    border-color: #e74c3c;
  }

  .form-error {
    display: block;
    font-family: "Lato", sans-serif;
    font-size: 0.8125rem;
    color: #e74c3c;
    margin-top: 0.375rem;
    min-height: 1.2em;
  }

  .link-forgot,
  .link-back {
    display: block;
    background: none;
    border: none;
    font-family: "Lato", sans-serif;
    font-size: 0.875rem;
    color: var(--pink-darker);
    text-decoration: underline;
    cursor: pointer;
    margin-bottom: 1.5rem;
    transition: opacity 0.2s ease;
  }

  .link-forgot:hover,
  .link-back:hover {
    opacity: 0.8;
  }

  .forgot-hint {
    font-family: "Lato", sans-serif;
    font-size: 0.875rem;
    color: var(--text-secondary);
    text-align: center;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: var(--component-bg);
    border-radius: 12px;
  }

  .btn-submit {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1.125rem;
    background: linear-gradient(135deg, var(--pink-dark), var(--pink-darker));
    color: white;
    font-family: "Montserrat", sans-serif;
    font-weight: 700;
    font-size: 1.0625rem;
    border: none;
    border-radius: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-md);
  }

  .btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .form-footer {
    text-align: center;
    font-family: "Lato", sans-serif;
    font-size: 0.9375rem;
    color: var(--text-secondary);
    margin-top: 1.5rem;
  }

  .link-register {
    background: none;
    border: none;
    color: var(--pink-darker);
    font-weight: 600;
    text-decoration: underline;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .link-register:hover {
    opacity: 0.8;
  }

  @media (prefers-reduced-motion: reduce) {
    .modal-overlay,
    .modal-content,
    .btn-submit:hover {
      animation: none;
      transform: none;
    }
  }
</style>
