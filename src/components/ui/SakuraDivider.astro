---
// Separador decorativo con pétalos de cerezo
// Se usa UNA sola vez para mantener la sutileza
import "../../styles/ui/SakuraDivider.css";
---

<div class="sakura-divider" aria-hidden="true">
  <svg
    class="sakura-divider-svg"
    width="120"
    height="60"
    viewBox="0 0 120 60"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <!-- Ramita delicada -->
    <path
      d="M10 30 Q40 25, 70 28 T110 30"
      stroke="currentColor"
      stroke-width="1.5"
      stroke-linecap="round"
      opacity="0.15"
      class="sakura-branch"></path>

    <!-- Pétalo izquierdo -->
    <g class="sakura-flower sakura-flower-left">
      <path
        d="M35 28 Q32 24, 35 20 Q38 24, 35 28 Z"
        fill="currentColor"
        opacity="0.12"></path>
      <path
        d="M35 28 Q31 28, 28 25 Q31 22, 35 20 Z"
        fill="currentColor"
        opacity="0.10"></path>
      <path
        d="M35 28 Q39 28, 42 25 Q39 22, 35 20 Z"
        fill="currentColor"
        opacity="0.10"></path>
      <circle cx="35" cy="24" r="1.5" fill="currentColor" opacity="0.2"
      ></circle>
    </g>

    <!-- Pétalo central -->
    <g class="sakura-flower sakura-flower-center">
      <path
        d="M70 30 Q67 26, 70 22 Q73 26, 70 30 Z"
        fill="currentColor"
        opacity="0.12"></path>
      <path
        d="M70 30 Q66 30, 63 27 Q66 24, 70 22 Z"
        fill="currentColor"
        opacity="0.10"></path>
      <path
        d="M70 30 Q74 30, 77 27 Q74 24, 70 22 Z"
        fill="currentColor"
        opacity="0.10"></path>
      <circle cx="70" cy="26" r="1.5" fill="currentColor" opacity="0.2"
      ></circle>
    </g>

    <!-- Pétalo derecho (más pequeño y sutil) -->
    <g class="sakura-flower sakura-flower-right">
      <path
        d="M95 32 Q93 29, 95 26 Q97 29, 95 32 Z"
        fill="currentColor"
        opacity="0.08"></path>
      <path
        d="M95 32 Q92 32, 90 30 Q92 28, 95 26 Z"
        fill="currentColor"
        opacity="0.06"></path>
      <circle cx="95" cy="29" r="1" fill="currentColor" opacity="0.15"></circle>
    </g>
  </svg>
</div>
