    margin-bottom: 1rem;
    line-height: 1.8;
  }

  .prose ul {
    margin-bottom: 1rem;
  }

  table {
    border-collapse: collapse;
    width: 100%;
  }

  th {
    font-weight: 600;
    text-align: left;
  }

